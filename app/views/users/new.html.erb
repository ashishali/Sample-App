	<table class="table table-striped">
		<tr>
			<td><%= f.label :name%></td>
			<td><%= f.text_field :name%></td>
		</tr>
		<tr>
                        <td><%= f.label :email%></td>
                        <td><%= f.email_field :email%></td>
                        </tr>

			<tr>
                        <td><%= f.label :password%></td>
                        <td><%= f.password_field :password%></td>
                        </tr>
<tr>
                        <td></td>
                        <td><%= f.submit%></td>
                        </tr>

		</table>
<%end%>
